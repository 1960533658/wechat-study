/**index.wxss**/


/* 轮播图 */
.banner swiper-item image {
  width: 100%;
  height: 330rpx;
}
/* 商品分类 */
.cate {
  display: flex;
  justify-content: space-between;
  padding: 36rpx 46rpx 40rpx;
}
.cate image {
  display: block;
  width: 100rpx;
  height: 140rpx;
}
/* 楼层 开始 */
.floor image {
  width: 100%;
  height: 80rpx;
}
.floor-content image {
  float: left;
  width: 232rpx;
  height: 188rpx;
}
.floor-content image:first-child {
  width: 232rpx;
  height: 386rpx;
  margin-right: 10rpx;
}
.floor-content image:nth-child(even) {
  margin: 0 22rpx 0 0;
}
.floor-content image:nth-child(2),
.floor-content image:nth-child(3) {
  margin-bottom: 16rpx;
}

