.fl {
	float: left;
}
.fr {
	float: right;
}
.clearfix:before, .clearfix:after {
	content: "";
	display: table;
} 
/* 搜索框公共样式 */
.top {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 228rpx;
  padding-top: 30rpx;
  background-color: #c00000;
  box-sizing: border-box;
  text-align: center;
}
.top text {
  display: block;
  padding: 23rpx 0;
  font-size: 30rpx;
  color: white;
}
.search {
  position: relative;
  margin: 0 auto;
  width: 710rpx;
}
.search input {
  height: 72rpx;
  border-radius: 72rpx;
  background-color: #fff;
}
.search image {
  width: 32rpx;
  height: 32rpx;
}
.search-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.search-content image {
  padding-top: 8rpx;
  padding-right: 10rpx;
}
.search-content text{
  padding: 0;
  font-size: 32rpx;
  color: #000;
}


